@model IEnumerable<ImageGallery.Models.Image>
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-sm-8"><h2>Home</h2></div>
    <div class="col-sm-2"></div>
    <div class="col-sm-2" style="padding-top: 15px; padding-right:0; right: 0;">
        @using (Html.BeginForm("Home", "Images", FormMethod.Post))
        {
            @Html.DropDownList("AlbumID", (IEnumerable<SelectListItem>)ViewBag.AlbumID, "All Albums", new { @class = "form-control", aria_describedby = "dropdownMenu1", onchange = "submit();" })
        }
    </div>
</div>
<div class="row">

    <div>
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <a asp-action="Details" asp-route-id="@item.ImageID">
                    <img style="width: 300px; height: 200px; padding: 5px 10px; filter: @item.Filter" src="@Url.Content("~/images/items/" + @item.Url)" alt="Card image cap">
                </a>
            </div>
        }
    </div>

</div>

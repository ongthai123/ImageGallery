@model ImageGallery.Models.Album

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Album</h2>
<head>
    <style>

        .detailbox {
            padding-left: 25%;
            padding-right: 25%;
        }

        .detailinfo {
            align-content: center;
            padding: 10%;
            background-color: #fff;
            border-radius: 3px;
            border: 1px solid #e6e6e6;
            margin-left: -1px;
            margin-right: -1px;
            align-content: center;
            padding: 10%;
        }

        body {
            background-image: linear-gradient(to bottom right, #fafafa, white);
        }
    </style>
</head>
<hr />
<div class="detailbox">
    <div class="detailinfo" style="background-color:d; border-radius:8px;">
        <h4 style="padding:10px; border-radius:8px; background:#f96666; color:white; text-align:center;">Are you sure you want to delete this?</h4>
        <div>
            <hr />
            <dl class="dl-horizontal">
                @*<dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>*@
                <dd>
                    <strong>
                        @Html.DisplayFor(model => model.Title)
                    </strong>
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="AlbumID" />
                <input type="submit" value="Delete" class="btn btn-default" />
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
